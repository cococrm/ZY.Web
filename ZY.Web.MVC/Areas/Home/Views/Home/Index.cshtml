@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ZY";
}
<script src="/Scripts/project.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $.project.loadNavMenu("sysModules/getSysNav", "menu");
    });
</script>
<div class="easyui-layout" data-options="fit:true">
    @*顶部*@
    <div data-options="region:'north',border:false" style="height:30px;background:#B3DFDA;">

    </div>
    @*功能菜单*@
    <div data-options="region:'west',split:true,title:'功能菜单'" style="width:180px;">
        <div id="menu" class="easyui-accordion" data-options="fit:true,border:false" style="text-align:center; padding:0px;">
        </div>
    </div>
    @*主页面*@
    <div data-options="region:'center'">
        @*选项卡*@
        <div id="divMainTabs" class="easyui-tabs" data-options="fit:true,border:false">
        </div>
    </div>
    @*页脚*@
    <div data-options="region:'south',border:false" style="height:30px; text-align:center;">

    </div>
</div>
@*选项卡菜单*@
<div id="divTabsMenu" data-options="duration:600" class="easyui-menu" style="width:150px;display:none;">
    <div id="menuItem_Refresh" data-options="iconCls:'icon-reload'">刷 新</div>
    <div class="menu-sep"></div>
    <div id="menuItem_CloseCurrent">关闭当前</div>
    <div id="menuItem_CloseOther">关闭其它</div>
    <div id="menuItem_CloseAll" data-options="iconCls:'icon-delete2'">全部关闭</div>
</div>
@*我的桌面选项卡菜单*@
<div id="divDesktopTabsMenu" data-options="duration:600" class="easyui-menu" style="width:150px;display:none;">
    <div id="menuItem_Refresh" data-options="iconCls:'icon-reload'">刷 新</div>
    <div id="menuItem_CloseOther">关闭其它</div>
</div>
